{
  "name": "phaser-platformer",
  "version": "1.0.0",
  "description": "Phaser-based platformer game with multiplayer",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "test:unit": "npm run test:client:unit && npm run test:server:unit",
    "test:client:unit": "cd client && npm run test:unit",
    "test:server:unit": "cd server && npm run test:unit",
    "test:integration": "cd server && npm run test:integration",
    "test:e2e": "cd client && npm run test:e2e",
    "test:coverage": "npm run test:client:coverage && npm run test:server:coverage",
    "test:client:coverage": "cd client && npm run test:coverage",
    "test:server:coverage": "cd server && npm run test:coverage",
    "lint": "eslint client/src server/src shared --ext .ts",
    "format": "prettier --write .",
    "docs": "typedoc --out docs/api client/src server/src shared"
  },
  "devDependencies": {
    "@types/puppeteer": "^5.4.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "canvas": "^3.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "puppeteer": "^24.34.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
